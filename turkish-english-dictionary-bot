import discord
import requests

client = discord.Client()

@client.event
async def on_ready() :
  print("We have logged in as {0.user}".format(client) ) 

@client.event
async def on_message(message):
  if message.author == client.user:
    return

  if message.content.startswith("merhaba"):
    await message.channel.send("hello")

  if message.content.startswith("görüşürüz"):
    await message.channel.send("see you")

  if message.content.startswith("günaydın"):
    await message.channel.send("good morning")

  if message.content.startswith("nasılsın?"):
    await message.channel.send("how are you?")
    
  if message.content.startswith("evet"):
    await message.channel.send("yes")
  
  if message.content.startswith("iyi"):
    await message.channel.send("good")

  if message.content.startswith("kötü"):
    await message.channel.send("bad")

  if message.content.startswith("ev"):
    await message.channel.send("home")


client.run("Discord Token Key")
